<div class="form-container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group inline-fields">
    <%= f.label t(:name) %><br>
    <%= f.text_field :first_name, placeholder: "Voornaam", autocomplete: "given-name" %>
    <%= f.text_field :middle_name, placeholder: "Tussenvoegsel", autocomplete: "additional-name" %>
    <%= f.text_field :surname, placeholder: "Achternaam", autocomplete: "family-name" %>
  </div>

  <div class="form-group">
    <%= f.label t(:email) %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label t(:"phone number") %><br />
    <%= f.telephone_field :phone_number %>
  </div>

   <div class="form-group">
    <%= f.label t(:postcode) %><br />
    <%= f.text_field :postcode %>
  </div>

  <div class="form-group">
    <%= f.label t(:password) %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label t(:"password confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>