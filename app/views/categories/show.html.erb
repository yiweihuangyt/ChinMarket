<div class="container">
<div class="sidebar">
    <h2><%= t(:categories) %></h2>
    <ul>
        <% @categories.each do |category| %>
        <%= link_to t(category.name), category, class: "link" %><br>
        <% end %>
    </ul>
</div>
<div class="main-content">

    <%= render "products/searchbar" %>

    <div class="product-container">
    <%= link_to t(:back), root_path, class: "button-link" %><p style="text-align: center; width: 70%; margin: 0 0 0 0; align-self: center;"><%= t(:categories) + " ➡️ " + @current_category_name %></p>
    </div>

    <div class="product-container" id="products">
            <%= render "products/products", products: @category %>
    </div>
</div>
</div>